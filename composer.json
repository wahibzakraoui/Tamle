{
    "name": "wahibzakraoui/tamle",
    "type": "library",
    "description": "Generate HTML5 tables from PHP using your predefined YAML templates without writing any Markup",
    "keywords": [
        "wahibzakraoui",
        "tamle"
    ],
    "homepage": "https://github.com/wahibzakraoui/tamle",
    "license": "MIT",
    "authors": [
        {
            "name": "Wahib ZAKRAOUI",
            "email": "admin@19dh.io",
            "homepage": "https://github.com/wahibzakraoui",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.2",
        "symfony/yaml": "^5.0",
        "donquixote/cellbrush": "^1.0.5"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "wahibzakraoui\\tamle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "wahibzakraoui\\tamle\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
